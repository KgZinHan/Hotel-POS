@model UserModelList

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- jQuery -->
<script src="../../plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="../../dist/js/adminlte.min.js"></script>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#messageBox").fadeOut();
        }, 5000);
    });
</script>

<div class="col-12">
    <div id="messageBox" class="alert alert-danger @((ViewBag.AlertMessage != null) ? "" : "d-none")" role="alert">
        @ViewBag.AlertMessage
    </div>
</div>
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title ">Edit POS User</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 row">
                    <form asp-action="Edit" class="form-horizontal">
                        <input type="hidden" asp-for="User.UserId" />
                        <div class="form-group row">
                            <label asp-for="User.UserCde" class="col-sm-6 col-form-label">User Code</label>
                            <div class="col-sm-6">
                                <input asp-for="User.UserCde" type="text" class="form-control" id="inputServer" placeholder="User Code" readonly>
                                <span asp-validation-for="User.UserCde" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="User.UserNme" class="col-sm-6 col-form-label">UserName</label>
                            <div class="col-sm-6">
                                <input asp-for="User.UserNme" type="text" class="form-control" id="inputServer" placeholder="UserName">
                                <span asp-validation-for="User.UserNme" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="User.CmpyId" class="col-sm-6 col-form-label">Company</label>
                            <div class="col-sm-6">
                                <select asp-for="User.CmpyId" class="form-control form-select" asp-items="@ViewBag.Companies">
                                    <option value="">Select One</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="User.POSid" class="col-sm-6 col-form-label">POS ID</label>
                            <div class="col-sm-6">
                                <select asp-for="User.POSid" class="form-control form-select">
                                    <option value="">Select One</option>
                                    @foreach (var item in Model.POSList)
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-6 col-form-label">Menu Group</label>
                            <div class="col-sm-6">
                                <select asp-for="User.MnuGrpId" class="form-control form-select">
                                    <option value="">Select One</option>
                                    @foreach (var item in Model.UserMenuGroupList)
                                    {
                                        <option value="@item.MnuGrpId">@item.MnuGrpNme</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-info">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



