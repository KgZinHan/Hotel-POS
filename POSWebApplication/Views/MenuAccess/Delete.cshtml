@model MenuAccessModelList

@{
    ViewData["Title"] = "Delete Menu Access";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    <div id="messageBox" class="alert alert-danger @((ViewBag.AlertMessage != null) ? "" : "d-none")" role="alert">
        @ViewBag.AlertMessage
    </div>
</div>
<div class="container-fluid">
    <div class="card">
    <div class="card-header">
        <h3 class="card-title ">Are you sure you want to delete?</h3>
    </div>
    <div class="card-body">
        <form asp-action="Delete" class="form-horizontal">
            <div class="col-md-6 row">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Menu Group</label>
                    <div class="col-sm-10">
                        <select asp-for="MenuAccess.MnuGrpId" class="form-control" disabled>
                            @foreach (var item in Model.UserMenuGroupList)
                            {
                                <option value="@item.MnuGrpId">@item.MnuGrpNme</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="MenuAccess.AccLevel" class="col-sm-2 col-form-label">Account Level</label>
                    <div class="col-sm-10">
                        <select asp-for="MenuAccess.AccLevel" class="form-control" disabled>
                            <option value="0">Disable</option>
                            <option value="1">Read</option>
                            <option value="2">Read/Write</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </form>
    </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#messageBox").fadeOut();
        }, 5000);
    });
</script>


